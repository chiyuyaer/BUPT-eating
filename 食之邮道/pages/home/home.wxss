swiper {
  width: 100%;
  height: 600rpx;
  background-color: #eee;
}/*滑块样式设计*/

.container {
  display: flex;
  flex-direction: column;
}

.item-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-container image {
  margin-top: 0px;
  width: 800rpx;
  height: 600rpx;
}

.item-container .name {
  margin: 100px;
  font-size: 200px;
}

.item-container .brief {
  margin: 100px;
  font-size: 180px;
}

.introduction {
  margin: 20px;
  color: gray;
  font-size: 18px;
}
